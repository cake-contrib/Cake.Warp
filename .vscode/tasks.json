{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/src/Cake.Warp.sln"
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "dependsOn":["restore"],
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Cake.Warp.sln",
                "--no-restore"
            ],
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Cake.Warp/Cake.Warp.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "dependsOn":["build"],
            "args": [
                "watch",
                "--project",
                "${workspaceFolder}/src/Cake.Warp.Tests/Cake.Warp.Tests.csproj",
                "--verbose",
                "test"
            ],
            "problemMatcher": "$tsc"
        }
    ]
}
